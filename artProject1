<!DOCTYPE html>
<html>
  <head>
   <title>Nick's Art Project</title>
  </head>
  <body style = "background-color: green">
    <canvas id="myCanvas" width="400" height="400"></canvas>
    
    <script>
    
      var canvas = document.getElementById("myCanvas"); //background rectangle
      var ctx = canvas.getContext("2d");
      ctx.fillStyle = "black";
      ctx.fillRect(0,0,400,400);
      
      ctx.beginPath() //top left white
      ctx.fillStyle = "white";
      ctx.fillRect(0,0,100,140);
      
      ctx.beginPath() //middle left white
      ctx.fillStyle = "white";
      ctx.fillRect(0,150,100,140);
      
      ctx.beginPath() //big bottom right white
      ctx.fillStyle = "white";
      ctx.fillRect(110,300,260,100);
      
      ctx.beginPath() //small bottom right white
      ctx.fillStyle = "white";
      ctx.fillRect(380,300,20,45);
      
      ctx.beginPath() //top right red
      ctx.fillStyle = "red";
      ctx.fillRect(110,0,290,290);
      
      ctx.beginPath() //bottom left blue
      ctx.fillStyle = "blue";
      ctx.fillRect(0,300,100,100);
      
      ctx.beginPath() //bottom right yellow
      ctx.fillStyle = "yellow";
      ctx.fillRect(380,355,20,45);
      
    </script>
  </body>
</html>
